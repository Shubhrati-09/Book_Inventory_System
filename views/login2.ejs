<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Semantic UI CSS-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

    <title>Login</title>
  </head>
  <body style="background: linear-gradient(to bottom, #4d88d6 0%, #2e578e 100%);">
      
<div class="flex justify-content-center pt-5">
      <!-- main box which will have two login options -->
    <br>
    <br>
    <br>
    <div class="loginBoxMain d-flex mx-5 my-5">
        <!-- <div class="m-4"> -->
            <!-- Onwer login box -->
            <div class="ui raised very padded text  segment m-5 container2 w-100">
      
                <h1 class="fs-1 text-white" style="background: linear-gradient(to right,  #4d88d6 0%, #2e578e 100%);"><center><shop-name></center></h1>  
                
                 <br>
                    <h3 class="card-title"><center>LOGIN to your account</center></h3>
                    
                    <% if (messages.error) {%>
                        <div class="alert alert-danger" role="alert">
                          <%= messages.error %>
                          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                        
                    <% } %>
                    <br>
                <div class="ui two column grid">
                    <div class="row">
                        <div class="column-12">
                            <form action="/login" method="POST" class="ui large form">
                
                                <div class="field">
                                    <div class="ui left icon input">
                                        <i class="user icon"></i>
                                        <input placeholder="Your email address" type="email" class="form-control" id="owner_email" name="email" required>
                                    </div> 
                                </div>

                                <div class="field">
                                    <div class="ui left icon input">
                                        <i class="lock icon"></i>
                                        <input placeholder="Your password" type="password" class="form-control" id="owner_password" name="password" required>
                                    </div>
                                </div>
                            
                                <br>
                                <button type="submit" class="ui fluid large teal submit button" style="background: linear-gradient(to right,  #4d88d6 0%, #2e578e 100%);">Login As Owner</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        <!-- </div> -->
        <!-- Admin login box -->
        <!-- <div class="m-4"> -->
            <div class="ui raised very padded text segment m-5 container2 w-100">
        
                <h1 class="fs-1 text-white" style="background: linear-gradient(to right,  #4d88d6 0%, #2e578e 100%);"><center><shop-name></center></h1>  
                
                <br>
                    <h3 class="card-title"><center>LOGIN to your account</center></h3>
                    
                    <% if (messages.error) {%>
                        <div class="alert alert-danger" role="alert">
                        <%= messages.error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                        
                    <% } %>
                    <br>
                <div class="ui two column grid">
                    <div class="row">
                        <div class="column-12">
                            <form action="/loginAdmin" method="POST" class="ui large form">
                
                                <div class="field">
                                    <div class="ui left icon input">
                                        <i class="user icon"></i>
                                        <input placeholder="Your email address" type="email" class="form-control" id="admin_email" name="email" required>
                                    </div> 
                                </div>

                                <div class="field">
                                    <div class="ui left icon input">
                                        <i class="lock icon"></i>
                                        <input placeholder="Your password" type="password" class="form-control" id="admin_password" name="password" required>
                                    </div>
                                </div>
                            
                                <br>
                                <button type="submit" class="ui fluid large teal submit button" style="background: linear-gradient(to right,  #4d88d6 0%, #2e578e 100%);">Login As Admin</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        <!-- </div> -->
    </div>
</div>

    <script>
        var alertList = document.querySelectorAll('.alert')
        alertList.forEach(function (alert) {
          new bootstrap.Alert(alert)
        })
    </script>
  </body>
</html>

