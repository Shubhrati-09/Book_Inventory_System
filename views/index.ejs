<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!--Custom CSS-->
  <link rel="stylesheet" href="styles.css">
  <!-- Semantic UI CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.css">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
  <title>WareHouse</title>
</head>
<body>
 <!-- Page content holder -->
  <div class="page-content" id="content" style="background: #87CEEB">
    <!-- header -->
    <div class="d-flex justify-content-between py-4 px-2 " style="background-color: oklch(0.391 0.09 240.876);">
      <h1 style="color:#ffffff">DASHBOARD</h1>
      <form action="/logout?_method=DELETE" method="POST">
        <center><button type="submit" class="btn logout" style="background-color: #ffffff;" ><p class="text-black">Log Out</p></button></center>
      </form>
    </div>

    <!-- Options -->
    <div class="flex Opt_Bx justify-content-center">
        <!-- 1st Row -->
        <div class="row m-4" >
            <div class="col-6 options">
                <a href="/salesreport" class="nav-link text-white font-italic">
                    <h1><i class="rupee sign icon"></i>Sales Report</h1>
                </a>
            </div>
            <div class="col-6 options">
                <a href="/addBill" class="nav-link text-white font-italic">
                    <h1><i class="eye icon"></i>Add Bill</h1>
                </a>
            </div>
        </div>
        <!-- 2nd Row -->
        <div class="row m-4">
            <div class="col-6 options">
                <a href="/inventory" class="nav-link text-white font-italic">
                    <h1><i class="tags icon"></i>View Inventory</h1>
                </a>
            </div>
            <div class="col-6 options">
                <a href="/purchaseBook" class="nav-link text-white font-italic">
                    <h1><i class="plus circle icon"></i>Purchase & History</h1>
                </a>
            </div>
        </div>
    </div>
  
</body>
</html>


